{
  "manifest_version": 3,
  "name": "Time Manager",
  "version": "1.0",
  "description": "A simple time-tracking extension.",
  "permissions": ["storage", "activeTab", "tabs"],
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "main_window.html",
    "default_icon": {
      "16": "icons/time_manager16.png",
      "48": "icons/time_manager48.png",
      "128": "icons/time_manager128.png"
    }
  },
  "icons": {
    "16": "icons/time_manager16.png",
    "48": "icons/time_manager48.png",
    "128": "icons/time_manager128.png"
  }
}
