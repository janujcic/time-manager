{
  "manifest_version": 3,
  "name": "Time Manager",
  "version": "2.0",
  "description": "A simple time-tracking extension.",
  "permissions": ["storage", "activeTab", "tabs", "scripting"],
  "optional_host_permissions": ["https://*/*"],
  "content_scripts": [
    {
      "matches": [
        "https://*.service-now.com/*",
        "https://*.service-now.eu/*",
        "https://*.service-now.us/*"
      ],
      "js": ["sn_content_bridge.js"],
      "run_at": "document_idle"
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["sn_page_bridge.js"],
      "matches": ["https://*/*"]
    }
  ],
  "background": {
    "service_worker": "background.js",
    "scripts": ["background.js"]
  },
  "action": {
    "default_popup": "main_window.html",
    "default_icon": {
      "16": "icons/time_manager16.png",
      "48": "icons/time_manager48.png",
      "128": "icons/time_manager128.png"
    }
  },
  "icons": {
    "16": "icons/time_manager16.png",
    "48": "icons/time_manager48.png",
    "128": "icons/time_manager128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "time-manager@example.org",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": [
          "personallyIdentifyingInfo",
          "websiteActivity",
          "websiteContent"
        ]
      }
    }
  }
}
